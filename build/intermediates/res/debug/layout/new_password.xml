<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bootstrapbutton="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/gradient_background">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:weightSum="1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/verifying_location_connection"
            android:id="@+id/share_password_text_prompt"
            android:textColor="@color/black"
            android:gravity="center" />

        <com.beardedhen.androidbootstrap.BootstrapEditText
            android:id="@+id/share_password"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:hint="@string/enter_wifi_password"
            android:textColor="@color/black"
            android:textCursorDrawable="@null"
            bootstrapbutton:be_roundedCorners="true"
            android:layout_gravity="center_horizontal"
            bootstrapbutton:be_state="success"
            android:inputType="text"
            android:imeOptions="actionDone"
            />

        <com.beardedhen.androidbootstrap.BootstrapButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="@string/verify_password_button_label"
            android:id="@+id/verify"
            bootstrapbutton:bb_type="success"
            bootstrapbutton:bb_roundedCorners="true"
            bootstrapbutton:bb_icon_right="fa-chevron-right"
            android:layout_gravity="center_horizontal"
            />

        <ImageButton
            android:layout_width="120dp"
            android:layout_height="65dp"
            android:layout_marginTop="60dp"
            android:layout_weight="0.11"
            android:id="@+id/share_password_security"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/norton_secured_compressed" />

        <com.beardedhen.androidbootstrap.BootstrapButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="@string/share_button_label"
            android:id="@+id/share_wifi"
            bootstrapbutton:bb_type="success"
            bootstrapbutton:bb_roundedCorners="true"
            bootstrapbutton:bb_icon_right="fa-share"
            android:layout_gravity="center_horizontal|bottom"
            />

        <ProgressBar
            android:id="@+id/spinner"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal" />
    </LinearLayout>
</FrameLayout><!-- From: file:/Users/imran/Code/android/unifi/unifi/src/main/res/layout/new_password.xml -->